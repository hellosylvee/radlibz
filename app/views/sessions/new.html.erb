<img class="logo" src="assets/radlibz-logo.png">
<h5>Please log in to begin.</h5><br>
<div class="row">
  <div class="col s6">
    <%= form_tag :sessions do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br></br>
  </div>
  <div class="col s6">
    <%= label_tag :password %>
    <%= text_field_tag :password %><br></br>
  </div>
</div>
<button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag :login %></button>
<% end %>
