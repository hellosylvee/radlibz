<h1><%= @madlib %></h1>

<div class="row">
  <div class="col s8 offset-s2">
    <h5>Enter words here.</h5><br></br>
    <%= form_for @user_vocab do |f| %>
      <% @madlib_types.each do |type| %>
        <%= hidden_field_tag :'user_words[word_types][]', type.word_type %>
        <%= label_tag :"user_words[words][]", "#{type.word_type}" %>
        <%= text_field_tag :"user_words[words][]" %>
      <% end %>
      <%= hidden_field_tag(:madlib_id, @user_vocab.madlib.id) %>
    <button class="btn waves-effect waves-light" type="submit" name="action"><%= f.submit 'Submit Words' %></button>
    <% end %>
  </div>
</div>
